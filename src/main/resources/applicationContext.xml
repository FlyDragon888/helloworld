	<!--  <bean id="ArticleManageMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="com.smallT.articleManage.dao.ArticleManageDao"/>
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>  -->
	
</beans>
        
